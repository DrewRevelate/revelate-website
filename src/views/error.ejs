<%- contentFor('body') %>

<div class="error-container">
  <div class="error-content">
    <img src="/images/revelate-spiral-logo.png" alt="Revelate Operations Logo" class="error-image" width="150" height="150">
    
    <h1 class="error-code"><%= statusCode || '404' %></h1>
    <h2 class="error-subtitle"><%= statusCode === 404 ? 'Page Not Found' : 'Server Error' %></h2>
    <p class="error-message"><%= message || 'Sorry, the page you are looking for does not exist.' %></p>
    
    <div class="error-actions">
      <a href="/" class="btn btn-primary">Return to Homepage</a>
      <a href="/contact" class="btn btn-outline">Contact Us</a>
    </div>
  </div>
</div>

<style>
  .error-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    min-height: 70vh;
    text-align: center;
    padding: 2rem;
    background-color: #f8f9fa;
    border-radius: 8px;
    max-width: 800px;
    margin: 2rem auto;
    box-shadow: 0 5px 15px rgba(0,0,0,0.05);
  }
  
  .error-image {
    max-width: 100%;
    height: auto;
    margin-bottom: 2rem;
  }
  
  .error-code {
    font-size: 8rem;
    font-weight: 700;
    color: #2b9fe3;
    margin: 0;
    line-height: 1;
  }
  
  .error-subtitle {
    font-size: 2rem;
    margin: 1rem 0 2rem;
    color: #2b3452;
  }
  
  .error-message {
    font-size: 1.2rem;
    color: #6c757d;
    max-width: 600px;
    margin: 0 auto 2rem;
  }
  
  .error-actions {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
    justify-content: center;
    margin-top: 2rem;
  }
</style>