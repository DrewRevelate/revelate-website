<!-- Assessment JavaScript -->
<script>
  document.addEventListener('DOMContentLoaded', function() {
    const form = document.getElementById('revops-assessment');
    
    form.addEventListener('submit', function(e) {
      e.preventDefault();
      
      // Collect form data
      const formData = new FormData(form);
      const assessment = {};
      
      for (const [key, value] of formData.entries()) {
        assessment[key] = value;
      }
      
      // Submit assessment data to API
      fetch('/api/assessments', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json'
        },
        body: JSON.stringify(assessment)
      })
      .then(response => response.json())
      .then(data => {
        if (data.success) {
          // Redirect to results page
          window.location.href = `/assessment-results?id=${data.assessmentId}`;
        } else {
          alert('There was an error processing your assessment. Please try again.');
        }
      })
      .catch(error => {
        console.error('Error:', error);
        alert('There was an error submitting the assessment. Please try again.');
      });
    });
    
    // Initialize testimonials slider
    const testimonials = document.getElementById('assessment-testimonials');
    let currentSlide = 0;
    const slides = testimonials.querySelectorAll('.testimonial');
    const totalSlides = slides.length;
    
    function showSlide(index) {
      // Hide all slides
      slides.forEach(slide => {
        slide.style.display = 'none';
      });
      
      // Show current slide
      slides[index].style.display = 'block';
    }
    
    function nextSlide() {
      currentSlide = (currentSlide + 1) % totalSlides;
      showSlide(currentSlide);
    }
    
    // Initial slide display
    showSlide(currentSlide);
    
    // Auto-advance slides every 5 seconds
    setInterval(nextSlide, 5000);
  });
</script>