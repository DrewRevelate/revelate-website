<!-- Calendly Modal JavaScript -->
<script>
document.addEventListener('DOMContentLoaded', function() {
  // Get all elements with the calendly-trigger class
  const calendlyTriggers = document.querySelectorAll('.calendly-trigger');
  const calendlyModal = document.getElementById('calendly-modal');
  const closeModalBtn = calendlyModal.querySelector('.close-modal');
  
  // Add click event to all calendly trigger buttons
  calendlyTriggers.forEach(button => {
    button.addEventListener('click', function(e) {
      e.preventDefault();
      calendlyModal.setAttribute('aria-hidden', 'false');
      calendlyModal.classList.add('active');
      document.body.classList.add('modal-open');
      
      // Set focus to the modal
      setTimeout(() => {
        closeModalBtn.focus();
      }, 100);
    });
  });
  
  // Close modal when clicking the close button
  closeModalBtn.addEventListener('click', function() {
    closeModal();
  });
  
  // Close modal when clicking outside of modal content
  calendlyModal.addEventListener('click', function(e) {
    if (e.target === calendlyModal) {
      closeModal();
    }
  });
  
  // Close modal with Escape key
  document.addEventListener('keydown', function(e) {
    if (e.key === 'Escape' && calendlyModal.classList.contains('active')) {
      closeModal();
    }
  });
  
  // Function to close modal
  function closeModal() {
    calendlyModal.setAttribute('aria-hidden', 'true');
    calendlyModal.classList.remove('active');
    document.body.classList.remove('modal-open');
    
    // Return focus to the last clicked trigger
    const lastClickedTrigger = document.querySelector('.calendly-trigger:focus') || 
                               document.querySelector('.calendly-trigger');
    if (lastClickedTrigger) {
      lastClickedTrigger.focus();
    }
  }
});
</script>

<!-- Counter Animation -->
<script>
document.addEventListener('DOMContentLoaded', function() {
  // Counter animation
  const counters = document.querySelectorAll('.counter');
  
  counters.forEach(counter => {
    const target = parseInt(counter.closest('.metric').dataset.value);
    const duration = 2000; // 2 seconds
    const frameRate = 50; // 50 fps
    const frames = duration / (1000 / frameRate);
    const increment = target / frames;
    
    let currentCount = 0;
    
    const animateCounter = () => {
      if(currentCount < target) {
        currentCount += increment;
        if(currentCount > target) currentCount = target;
        counter.textContent = Math.floor(currentCount);
        requestAnimationFrame(animateCounter);
      } else {
        counter.textContent = target;
      }
    };
    
    animateCounter();
  });
});
</script>